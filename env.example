# ========================================
# CIVITEC FRONTEND - VARIÁVEIS DE AMBIENTE
# ========================================
# Copie este arquivo para .env.local e configure os valores

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
NEXT_PUBLIC_APP_NAME=Civitec
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Sistema de Gestão Municipal

# ========================================
# CONFIGURAÇÕES DA API
# ========================================
# URL da API Backend (desenvolvimento)
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# URL da API Backend (produção)
# NEXT_PUBLIC_API_URL=https://api.civitec.com/api

# ========================================
# CONFIGURAÇÕES DE MAPAS
# ========================================
# Chave da API do OpenStreetMap (opcional)
NEXT_PUBLIC_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# ========================================
# CONFIGURAÇÕES DE ANALYTICS (OPCIONAL)
# ========================================
# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES (OPCIONAL)
# ========================================
# Web Push Notifications
# NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key

# ========================================
# CONFIGURAÇÕES DE FEATURES (OPCIONAL)
# ========================================
# Habilitar/desabilitar funcionalidades
NEXT_PUBLIC_ENABLE_MAPS=true
NEXT_PUBLIC_ENABLE_CHARTS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
NODE_ENV=development

# ========================================
# CONFIGURAÇÕES DE DEBUG (OPCIONAL)
# ========================================
# Habilitar logs de debug
NEXT_PUBLIC_DEBUG=true

# ========================================
# CONFIGURAÇÕES DE PERFORMANCE (OPCIONAL)
# ========================================
# Tamanho máximo de upload de arquivos (em bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA (OPCIONAL)
# ========================================
# Tempo de expiração da sessão (em minutos)
NEXT_PUBLIC_SESSION_TIMEOUT=30

# ========================================
# CONFIGURAÇÕES DE IDIOMA (OPCIONAL)
# ========================================
# Idioma padrão da aplicação
NEXT_PUBLIC_DEFAULT_LOCALE=pt-BR

# ========================================
# CONFIGURAÇÕES DE TIMEZONE (OPCIONAL)
# ========================================
# Fuso horário padrão
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/Sao_Paulo
